<h2>Delete '<%= @admin.login %>'</h2>

<% prompt do %>
  <% form_tag admin_path(@admin), :method => :delete do %>
    <label>Really delete this record?</label>

    <div class="form-actions">
      <%= submit_tag 'Delete' %>
      |
      <a href="/admins">Cancel</a>
    </div>
  <% end %>
<% end %>

<%= render :partial => '/admins/summary' %>
