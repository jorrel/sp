<% table :id => 'admins' do %>
  <thead>
    <tr class="table-top">
      <th>Login</th>
      <th>Real Name</th>
      <th>Superadmin</th>
      <th>Last Updated</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| -%>
      <% content_tag_for(:tr, admin, :class => cycle(:odd, :even)) do %>
        <td><%= admin.login %></td>
        <td><%= admin.name %></td>
        <td><%= admin.superadmin?.humanize %></td>
        <td><%= display_time admin.updated_at %></td>
      <% end %>
    <% end %>
  </tbody>
<% end %>
